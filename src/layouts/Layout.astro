---
import '../styles/global.css'

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Gurrr, embark on a new adventure! An indie 3D couch co-op game developed by a small team." />
		<meta name="viewport" content="width=device-width" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="manifest" href="/site.webmanifest">
		<meta name="generator" content={Astro.generator} />
		<meta name="robots" content="index, nofollow" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
	<footer>
		<p>Website done by <a href="https://rixi.dev/" target="_blank">Rixi</a> ðŸŒ±</p>
		<p id="copyright"></p>
	</footer>
</html>

<script>
	// JavaScript to get the current year and update the copyright paragraph
	const currentYear = new Date().getFullYear();
	const copyrightText = `Copyright Â© 2023 - ${currentYear}`;
	document.getElementById('copyright').textContent = copyrightText;
</script>

<style>
	footer {
		background-color: #1b191f;
		height: 7vh;
		display: flex;
		justify-content: space-evenly;
		align-items: center;
		flex-direction: column;
	}

	footer p {
		font-size: calc(0.5vw + 0.5vh + 0.5vmin);
	}

	footer a {
		color: #fff;
		text-underline-offset: 3px;
	}
</style>

<style is:global>

	body {
		font-family: "Rubik", sans-serif;
		height: 100vh;
	}

	h1{
  		font-family: "LondrinaSolidRegular", sans-serif;
	}
	h2{
  		font-family: "LondrinaSolidLight", sans-serif;
	}
	h3, h4, h5, h6{
  		font-family: "LondrinaSolidThin", sans-serif;
	}

</style>
